<resources>

    <style name="CardViewStandard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutMain">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewStandard" parent="@android:style/Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewHeading" parent="TextViewStandard">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TextViewWarning" parent="TextViewStandard">
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_warning</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="EditTextStandard" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:ems">12</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColor">@color/textHint</item>
    </style>

    <style name="ButtonStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ButtonWithImage" parent="ButtonStandard">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="ButtonName" parent="ButtonStandard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">@string/full_name</item>
    </style>

    <style name="ButtonAddress" parent="ButtonStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/address</item>
        <item name="android:drawableLeft">@drawable/ic_location</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
    </style>

    <style name="ButtonOpeningTimes" parent="ButtonStandard">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:drawableLeft">@drawable/ic_opening_times</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

    <style name="TextViewDistance" parent="ButtonStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:hint">@string/distance</item>
    </style>

    <style name="ButtonPhonePharmacy" parent="ButtonStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:drawableLeft">@drawable/ic_phone_pharmacy</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
    </style>

    <style name="ButtonPhoneHome" parent="ButtonStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/phone</item>
        <item name="android:drawableLeft">@drawable/ic_phone_home</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
    </style>

    <style name="ButtonNight" parent="ButtonStandard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:drawableLeft">@drawable/ic_night</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/night_pharmacy</item>
    </style>

    <style name="CancelButtonStandard" parent="ButtonWithImage">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:contentDescription">Cancel</item>
    </style>
</resources>