<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStandard"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pharmacyRecyclerViewItemNameTextView"
            style="@style/TextViewContact"
            android:hint="@string/full_name"/>

        <TextView
            android:id="@+id/pharmacyRecyclerViewItemAddressTextView"
            style="@style/TextViewAddress"
            android:hint="@string/address" />

        <TextView
            android:id="@+id/pharmacyRecyclerViewItemDistanceTextView"
            style="@style/TextViewDistance"
            android:hint="@string/distance" />

        <TextView
            android:id="@+id/pharmacyRecyclerViewItemPhoneTextView"
            style="@style/TextViewPhone"
            android:hint="@string/phone" />

        <TextView
            android:id="@+id/pharmacyRecyclerViewItemNightTextView"
            style="@style/TextViewNight"
            android:text="@string/night_pharmacy"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>