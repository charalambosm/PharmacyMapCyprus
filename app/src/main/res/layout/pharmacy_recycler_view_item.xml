<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewRoot"
    style="@style/CardViewStandard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pharmacyRecyclerViewItemNameTextView"
                style="@style/TextViewContact"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/cardViewBookmarksButton"
                android:hint="@string/full_name" />

            <TextView
                android:id="@+id/pharmacyRecyclerViewItemAddressTextView"
                style="@style/TextViewAddress"
                android:layout_below="@+id/pharmacyRecyclerViewItemNameTextView"
                android:hint="@string/address" />

            <TextView
                android:id="@+id/pharmacyRecyclerViewItemDistanceTextView"
                style="@style/TextViewDistance"
                android:layout_below="@+id/pharmacyRecyclerViewItemAddressTextView"
                android:hint="@string/distance" />

            <TextView
                android:id="@+id/pharmacyRecyclerViewItemPhoneTextView"
                style="@style/TextViewPhone"
                android:layout_below="@id/pharmacyRecyclerViewItemDistanceTextView"
                android:hint="@string/phone" />

            <TextView
                android:id="@+id/pharmacyRecyclerViewItemNightTextView"
                style="@style/TextViewNight"
                android:layout_below="@+id/pharmacyRecyclerViewItemPhoneTextView"
                android:text="@string/night_pharmacy" />

            <Button
                android:id="@+id/cardViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:foreground="@drawable/rectangle_border"
                android:text="Περισσότερα"
                android:layout_below="@id/pharmacyRecyclerViewItemNightTextView"
                android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/cardViewBookmarksButton"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_favorite_add"
            android:contentDescription="@string/bookmarks_activity_title"
            android:layout_margin="10dp"
            android:background="?android:attr/selectableItemBackground"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>